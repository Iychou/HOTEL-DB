ARCHIVE LOG LIST;
 Shutdown immediate;
 STARTUP MOUNT;
 alter database archivelog;
 ALTER DATABASE OPEN;
 ALTER PLUGGABLE DATABASE ALL OPEN
--bash
rman target=/
