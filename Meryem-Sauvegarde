-- SQL*Plus (CDB)
ARCHIVE LOG LIST;
 Shutdown immediate;
 STARTUP MOUNT;
 alter database archivelog;
 ALTER DATABASE OPEN;
 ALTER PLUGGABLE DATABASE ALL OPEN
--bash
rman target=/
-- RMAN
backup pluggable database hotel_db plus archivelog;
BACKUP ARCHIVELOG ALL;
BACKUP CURRENT CONTROLFILE;
BACKUP SPFILE;
BACKUP INCREMENTAL LEVEL 0 pluggable DATABASE hotel_db;
BACKUP INCREMENTAL LEVEL 1 pluggable DATABASE hotel_db;
RESTORE PLUGGABLE DATABASE hotel_db VALIDATE;
